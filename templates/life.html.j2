{% extends 'base.html.j2' %}


{% block app_content %}
<a href="{{ url_for('index')}}" class="btn btn-warning home">Home</a>
<a href="{{ url_for('life')}}" class="btn btn-info refresh">Refresh</a>
<a href="{{ url_for('stat')}}" class="btn btn-info not-refresh">Turn off autorefreshing</a>

    <table class="world">
        {% for i in range(world|length) %}
            <tr>
                {% for j in range(world[0]|length) %}
                    {% if world[i][j] %}
                        <td class="cell living-cell"></td>
                    {% elif not world[i][j] and old_world[i][j] %}
                        <td class="cell dead-cell"></td>
                    {% else %}
                        <td class="cell"></td>
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
    <div class="counter">{{ counter }}</div>
{% endblock app_content %}

{% block scripts %}
    {{ super() }}
    <script>
        setInterval(() => window.location.reload(), 1000);
    </script>
{% endblock %}

